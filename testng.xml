<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name = "Tests suit" thread-count="1" verbose="1" annotations="JDK" parallel="tests">
